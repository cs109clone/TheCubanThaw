<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <script src="http://d3js.org/d3.v3.min.js"></script>
    <script src="http://labratrevenge.com/d3-tip/javascripts/d3.tip.v0.6.3.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/topojson/1.6.9/topojson.min.js"></script>

    <script src="http://d3js.org/queue.v1.min.js"></script>

    <script src="/js/Map_Vis.js"></script>
    <script src="/js/Sen_Vis.js"></script>
    <script src="/js/Rep_Vis.js"></script>
    <script src="/js/President_Vis.js"></script>
    <script src="/js/Twitter_Vis.js"></script>
    <script src="/js/Area_Vis.js"></script>
    <script src="/js/Event_Vis.js"></script>


    <style>

        .art
        {
            float:left; 
            width: 45%; 
            height:150px; 
            background-color:azure; 
            margin-right:5%; 
            margin-bottom: 10px
        }

        .d3-tip
        {
            line-height: 1;
            font-weight: bold;
            padding: 12px;
            background: rgba(0, 0, 0, 0.8);
            color: #fff;
            border-radius: 2px;
        }

            /* Creates a small triangle extender for the tooltip */
            .d3-tip:after
            {
                box-sizing: border-box;
                display: inline;
                font-size: 10px;
                width: 100%;
                line-height: 1;
                color: rgba(0, 0, 0, 0.8);
                content: "\25BC";
                position: absolute;
                text-align: center;
            }

            /* Style northward tooltips differently */
            .d3-tip.n:after
            {
                margin: -1px 0 0 0;
                top: 100%;
                left: 0;
            }

        .senators
        {
            width: 50%;
            height: 100%;
            float: left;
        }

        .sen-name
        {
            font-family: 'Arial Black', Gadget, sans-serif;
            font-size: larger;
            font-weight: bold;
            margin-bottom: 10px;
            display: block;
        }

        .sens
        {
            width: 100%;
            height: 48%;
        }

        .sen-pic
        {
            width: 40%;
            height: 100%;
            float: left;
        }

        .sen-info
        {
            width: 58%;
            height: 100%;
            float: left;
        }

        .cuba
        {
            margin-left: 200px;
        }

            .cuba button
            {
                margin-left: 10px;
            }

        .states:hover
        {
            fill: yellow;
            cursor: pointer;
        }

        .range-style
        {
        }

        .play-button
        {
            width: 8%;
            height: 28px;
            background-color: green;
            float: left;
            border-radius: 5px;
            cursor: pointer;
            text-align: center;
            color: white;
            font-size: large;
        }

        .stop-button
        {
            width: 8%;
            height: 28px;
            background-color: red;
            float: left;
            border-radius: 5px;
            cursor: pointer;
            text-align: center;
            color: white;
            font-size: large;
        }

        .time-slider
        {
            width: 90%;
            float: left;
            margin-left: 5px;
        }

        .time
        {
            margin-left: 50px;
        }

        .map-vis
        {
            margin-left: auto;
            margin-right: auto;
            display: block;
        }

        .choice
        {
            float: left;
        }

        .analysis-type
        {
            width: 140px;
            float: left;
            margin-top: 10px;
            margin-left: 20px;
            height: 30px;
            display: block;
            background-color: aquamarine;
            text-align: center;
            border-radius: 20px;
            font-family: Cambria, 'Times New Roman', 'Nimbus Roman No9 L', 'Freeserif', Times, serif;
            font-size: large;
            font-weight: bolder;
            cursor: pointer;
        }

            .analysis-type:hover
            {
                color: white;
                background-color: black;
            }


        .axis text
        {
            font: 10px sans-serif;
        }

        .axis line,
        .axis path
        {
            fill: none;
            stroke: #000;
            shape-rendering: crispEdges;
        }
    </style>

    <link href="~/css/style.css" rel="stylesheet" type="text/css" />

</head>
<body>

    @RenderBody()

</body>
</html>
